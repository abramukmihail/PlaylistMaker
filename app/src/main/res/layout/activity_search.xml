<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/settings_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        tools:ignore="UselessParent">
        <Button style="@style/ButtonBack"
            android:id="@+id/back"/>

        <TextView
            style="@style/TextSettings"
            android:fontFamily="@font/ys_display_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/search"
            android:textColor="@color/text_color"
            android:textSize="22sp"
            android:paddingStart="@dimen/size_12dp"
            android:paddingTop="14dp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="0dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_16dp"
            android:layout_marginEnd="@dimen/size_16dp"
            android:autofillHints=""
            android:background="@drawable/search_background_rounded"
            android:drawableStart="@drawable/ic_search_string_14"
            android:drawablePadding="9dp"
            android:drawableTint="@color/icon_color_search"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search"
            android:inputType="text"
            android:lines="1"
            android:paddingStart="13dp"
            android:textColor="@color/black"
            android:textColorHint="@color/text_color_search"
            android:textFontWeight="400"
            android:textSize="@dimen/text_size_settings"
            tools:ignore="Autofill,DuplicateSpeakableTextCheck,RtlSymmetry,TouchTargetSizeCheck,VisualLintTextFieldSize,TextContrastCheck"
            android:imeOptions="actionDone"
            android:singleLine="true"/>
        <ImageView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:contentDescription="@string/clear"
            app:srcCompat="@drawable/ic_clear_16"
            app:tint="@color/text_color_search"
            android:layout_gravity="center_vertical|end"
            android:visibility="gone"
            />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/noConnection"
        style="@style/ErrorLayout"
        android:visibility="gone">

        <ImageView
            style="@style/ErrorImage"
            android:src="@drawable/ic_no_connection_120" />

        <TextView
            style="@style/ErrorText"
            android:text="@string/no_connection" />

        <Button
            android:id="@+id/refreshButton"
            style="@style/RefreshButton"
            android:text="@string/refresh" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nothingFound"
        style="@style/ErrorLayout">

        <ImageView
            android:src="@drawable/ic_not_found_120"
            style="@style/ErrorImage"/>

        <TextView
            android:text="@string/not_found"
            style="@style/ErrorText" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
</LinearLayout>
