<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonActivityMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/size_16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/size_16dp</item>
        <item name="android:insetTop">@dimen/size_0dp</item>
        <item name="android:insetBottom">@dimen/size_0dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ButtonBack">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="icon">@drawable/ic_arrow_back_24</item>
        <item name="iconTint">@color/icon_back_color</item>
        <item name="android:paddingHorizontal">@dimen/size_12dp</item>
        <item name="android:paddingVertical">@dimen/size_12dp</item>
        <item name="android:insetTop">@dimen/size_0dp</item>
        <item name="android:insetBottom">@dimen/size_0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:contentDescription">@string/back</item>
    </style>
    <style name="TextStyleSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_marginStart">@dimen/size_16dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size_settings</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="ImageSettings">
        <item name="android:layout_width">@dimen/size_24dp</item>
        <item name="android:layout_height">@dimen/size_24dp</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginEnd">@dimen/size_12dp</item>
        <item name="android:tint">@color/icon_color</item>
    </style>
    <style name="TextSettings">
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="TextArtist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/icon_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="TextTrack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_16dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="ErrorImage">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_gravity">center|top</item>
    </style>
    <style name="ErrorLayout">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">102dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="ErrorText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/size_16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/size_24dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="RefreshButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_36dp</item>
        <item name="android:layout_marginTop">@dimen/size_24dp</item>
        <item name="android:backgroundTint">@color/text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">@dimen/size_0dp</item>
        <item name="android:insetBottom">@dimen/size_0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:paddingStart">@dimen/size_8dp</item>
        <item name="android:paddingEnd">@dimen/size_8dp</item>
        <item name="android:paddingVertical">@dimen/size_6dp</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/settings_background</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
</resources>